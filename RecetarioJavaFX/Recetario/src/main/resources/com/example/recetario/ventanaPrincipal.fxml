<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.recetario.VentanaPrincipalController">
   <center>
      <BorderPane prefHeight="740.0" prefWidth="900.0" styleClass="ventana" stylesheets="@style.css">
         <top>
            <VBox alignment="CENTER" prefHeight="266.0" prefWidth="322.0" spacing="20.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
               <ImageView fx:id="imagen" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@img/libro-de-recetas.png" />
                  </image>
               </ImageView>
            
                <Label id="titulo" fx:id="welcomeText" text="Recetario de Cocina">
                  <font>
                     <Font name="System Bold" size="36.0" />
                  </font>
               </Label>
               <ComboBox fx:id="comboRecetas" onAction="#mostrarReceta" prefWidth="150.0" />
            </VBox>
         </top>
         <center>
            <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0" styleClass="transparente" BorderPane.alignment="CENTER">
               <items>
                  <VBox blendMode="MULTIPLY" maxWidth="300.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0" styleClass="transparente">
                     <children>
                        <Label text="Nueva Receta">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Label text="Nombre de la receta" />
                        <TextField fx:id="txtNombre" promptText="Introduce un nombre descriptivo" />
                        <RadioButton mnemonicParsing="false" selected="true" text="Fácil">
                           <toggleGroup>
                              <ToggleGroup fx:id="dificultad" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Media" toggleGroup="$dificultad" />
                        <RadioButton mnemonicParsing="false" text="Dificil" toggleGroup="$dificultad" />
                        <ToggleButton mnemonicParsing="false" text="ToggleButton" toggleGroup="$dificultad" />
                        <FlowPane hgap="20.0">
                           <children>
                              <Label text="Duración" />
                              <Label fx:id="lblDuracion" text="Label">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </FlowPane>
                        <Slider fx:id="sliderDuracion" majorTickUnit="30.0" max="180.0" minorTickCount="2" onMouseDragged="#actualizarDuracion" onMouseReleased="#actualizarDuracion" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
                        <Label text="Dificultad" />
                        <FlowPane hgap="20.0">
                           <children>
                              <ComboBox fx:id="comboDificultad" prefWidth="150.0" />
                              <ImageView fx:id="carita" fitHeight="150.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@img/feliz.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </FlowPane>
                        <Label text="Tipo de receta" />
                        <ListView fx:id="listTipo" prefHeight="200.0" prefWidth="200.0" />
                        <Button fx:id="btnAñadir" mnemonicParsing="false" onAction="#insertarReceta" text="Añadir a la tabla">
                           <graphic>
                              <ImageView fitHeight="44.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@img/feliz.png" />
                                 </image>
                              </ImageView>
                           </graphic></Button>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <TableView id="tabla" fx:id="tabla" onMouseClicked="#click" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="cNombre" prefWidth="75.0" text="Receta" />
                      <TableColumn fx:id="cDuracion" prefWidth="75.0" text="Duración" />
                        <TableColumn fx:id="cDificultad" prefWidth="75.0" text="Dificultad" />
                        <TableColumn fx:id="cTipo" prefWidth="75.0" text="Tipo" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </items>
            </SplitPane>
         </center>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <bottom>
            <Label fx:id="info" styleClass="info" text="Creado para 2DAM" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
            <items>
              <MenuItem fx:id="menuSalir" mnemonicParsing="false" onAction="#salir" style="-fx-bacjground-color: red;" text="Salir" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="menuAcercaDe" mnemonicParsing="false" onAction="#mostrarAcercaDe" text="Acerca de" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
